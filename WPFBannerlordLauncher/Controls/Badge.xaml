<UserControl x:Class="WPFBannerlordLauncher.Controls.Badge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFBannerlordLauncher.Controls" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <materialDesign:Card Background="{Binding BadgeBackground}" Padding="5,5,5,5" VerticalAlignment="Center">
        <TextBlock Text="{Binding Title}" Foreground="{Binding BadgeForeground}" HorizontalAlignment="Center" />
    </materialDesign:Card>
</UserControl>
